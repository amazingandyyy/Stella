{
  "manifest_version": 2,
  "name": "Voice Web",
  "description": "A Launchpad app that browses the web using your voice",
  "version": "1.0",
  "icons": {
    "16": "public/img/favicon-16x16.png",
    "48": "public/img/icon-48x48.png",
    "128": "public/img/icon-128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "public/img/favicon-16x16.png",
      "48": "public/img/icon-48x48.png",
      "128": "public/img/icon-128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search?q=*&from=stella"],
      "js": ["background/preview.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "background",
    "notifications",
    "tabs",
    "tts",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background/background.js", "background/tts.js", "background/notifications.js"]
  }
}
